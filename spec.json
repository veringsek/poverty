{
    "meta": {
        "version": "0.0.1"
    },
    "#": {
        "meta!": {
            "format!": "string(Poverty JSON)",
            "version!": "string(M.N.P)"
        },
        "transactions": [ "<Transaction>" ],
        "templates": [ "<Transaction>" ],
        "currencies": [ {
            "name#": "string",
            "fullname?": "string",
            "note?": "string",
            "exchange?": [ {
                "target#": "string -> #.currencies[?].name",
                "rate!": "number.real"
            } ],
            "format?": "string(America|Europe|Sinosphere|India)",
            "visible?": true
        } ],
        "pools": [ {
            "id#": "string",
            "name": "string",
            "currency": "string -> #.currencies[?].name",
            "balance": "number.real",
            "total?": true,
            "note?": "string"
        } ],
        "budgets": [ {
            "id#": "string",
            "name": "string",
            "currency": "string -> #.currencies[?].name",
            "automation?": {
                "period": "string(weekly|monthly|annual)",
                "start": "<Datetime>",
                "end?": "<Datetime>",
                "over?": "string(return|keep)"
            },
            "budgets": [ {
                "id#(#.budgets[*].budgets)": "string",
                "name": "string",
                "start": "<Datetime>",
                "end": "<Datetime>",
                "balance": "number.real",
                "visible?": true
            } ]
        } ]
    }, 
    "<Datetime>": "string.datetime(YYYY-MM-DDThh:mm:ss.SSSÂ±ZZ:zz)",
    "<Transaction>": {
        "id#(#.transactions)": "string",
        "item!": "string",
        "type?": "string(transfer|balance)",
        "price?": "number.real",
        "currency?": "string -> #.currencies[?].name",
        "time": "<Datetime>",
        "logtime!": "<Datetime>",
        "note?": "string",
        "source?": "string -> #.pools[?].id",
        "target?": "string -> #.pools[?].id",
        "budget?": "string -> #.budgets[?].budgets[?].id",
        "tags?": [ "string" ],
        "subs": [ "<Transaction>" ]
    }
}